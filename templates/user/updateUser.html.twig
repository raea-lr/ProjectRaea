{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}
{%block css%}

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../css/sb-admin-2.min.css" rel="stylesheet">
{%endblock%}

{% block body %}
    <body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Update User!</h1>

                            </div>
                            {{ form_start(f)}}
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="col-sm-6">
                                        {{ form_widget(f.nom , {'attr': {'class':'form-control form-control-user', 'placeholder': 'nom','required' : 'true'}}) }}

                                    </div>

                                </div>
                                <div class="col-sm-6">
                                    {{ form_widget(f.mail , {'attr': {'class':'form-control form-control-user', 'placeholder': 'mail','required' : 'true'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(f.mdp , {'attr': {'class':'form-control form-control-user', 'placeholder': 'mdp','required' : 'true'}}) }}
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_widget(f.tel , {'attr': {'class':'form-control form-control-user', 'placeholder': 'tel','required' : 'true'}}) }}

                                </div>
                                <div class="col-sm-6">
                                    {{ form_widget(f.role , {'attr': {'class':'form-control form-control-user', 'placeholder': 'role','required' : 'true'}}) }}

                                </div>
                            </div>
                            <button class="btn btn-primary btn-user btn-block" type="submit">
                                Update User
                            </button>
                            <hr>
                            {{ form_end(f) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    </body>
{% endblock %}
